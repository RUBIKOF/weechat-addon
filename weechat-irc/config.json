{
  "name": "WeeChat IRC Server",
  "version": "0.1.0",
  "slug": "weechat_irc_server",
  "description": "WeeChat running as a server on Home Assistant for mobile access via WeeChat-Android.",
  "url": "https://github.com/TU_USUARIO/weechat-addon",
  "arch": ["aarch64", "amd64", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "options": {
    "relay_port": 8088,
    "relay_password": "YOUR_SUPER_SECURE_PASSWORD"
  },
  "schema": {
    "relay_port": "int",
    "relay_password": "str"
  },
  "ports": {
    "8088/tcp": 8088
  },
  "apparmor": false
}
